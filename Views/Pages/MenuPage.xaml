<Page x:Class="Tesis.Views.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tesis.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главное меню">

    <Page.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatDarkBgButton}">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width"  Value="300"/>
            <Setter Property="Margin" Value="0 2"/>
        </Style>
    </Page.Resources>
    
    <Grid>

        <Button Style="{StaticResource BtnBack}"
                HorizontalAlignment="Right"
                Content="Выйти"
                Click="BtnBack_Click"/>

        <StackPanel VerticalAlignment="Center">
            <Button Content="Данные"
                    Click="Attandance_Btn"/>
            <Button Content="Сформировать отчёт"
                    Click="Account_Btn"/>
            <Button Content="Курирование"
                    Click="BtnMyGroup_Click"/>
            <Button Content="Настройки"
                    Click="Setting_Btn"/>
            <Button Content="Помощь"/>
        </StackPanel>


        
    </Grid>
</Page>
